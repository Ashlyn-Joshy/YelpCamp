<%- layout('layout/boilerplate') %>
<div class="row mb-3">
  <div class="col-md-6">
    <img
      src="https://img.freepik.com/free-vector/isolated-camping-tent-nature_1308-124915.jpg?t=st=1710966853~exp=1710970453~hmac=ce6c1111e2830e48758cb1966ddbe4361b547633640ea0de735f9ee0e597c07f&w=996"
      alt="camping image"
      class="img-fluid"
    />
  </div>
  <div class="col-md-6">
    <h1 class="text-center my-3">Register</h1>
    <form action="/register" method="post" class="form-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">User Name</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please provide an username.</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please provide an email.</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please provide a password.</div>
      </div>
      <button class="btn btn-success">Sign Up</button>
    </form>
  </div>
</div>
