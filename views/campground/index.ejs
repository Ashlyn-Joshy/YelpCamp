<%- layout('layout/boilerplate') %>
<!-- here showing the cluster map -->
<div id="map" style="width: 100%; height: 500px"></div>

<h1 class="my-3">All Campground</h1>
<% for(let c of camp){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(c.images.length){ %>
      <img
        crossorigin="anonymous"
        src="<%= c.images[0].url %>"
        class="img-fluid"
        alt="camping image"
      />
      <% } else{ %>
      <!-- this image will be display in the index page if the user did not upload any image -->
      <img
        crossorigin="anonymous"
        src="https://res.cloudinary.com/dhkwyh24o/image/upload/v1710712202/YelpCamp/dhrzuqbtnlqwsdx0ebs6.jpg"
        alt="camping image"
        class="img-fluid"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= c.title %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          <%= c.location %>
        </h6>
        <p class="card-text"><%= c.description %></p>
        <a href="/campground/<%= c.id %>" class="card-link btn btn-primary"
          >View <%= c.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = { features:<%- JSON.stringify(camp) %>}
</script>
<script src="/javascript/clusterMap.js"></script>
